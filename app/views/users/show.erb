<br></br>
<div class="container text-center">
  <div class="row">
    <div class="col-sm-4 well">
      <div class="well">
        <h4><%=@user.username.capitalize%>'s Tweets</h4>
      </div>
      <h4>Post a new fweet : </h4>

      </div>

    </div>
    <div class="col-sm-8">


      <form method="post" action="/tweets">
        <label for="content">Content:</label>
        <input type="text" name="content" id="content">
        <br></br>
        <input type="submit" value="Tweet It!">
      </form>
      </div>

      <% @tweets.each { |tweet| %>
        <div class="row">
          <div class="col-sm-3">
            <div class="well">
             <p><%= tweet.user.username %> Posted : </p>
            </div>
          </div>
          <div class="col-sm-9">
            <div class="well">
              <p><%=tweet.content%></p>

              <% if @user == tweet.user %>
                <div class="row">
                  <div class="col-sm-6">
                    <form action="/tweets/<%=tweet.id%>/edit" method="get">
                      <input type="submit" class="btn btn-default btn-sm" value="Edit">
                    </form>
                  </div>
                  <div class="col-sm-6">
                    <form action="/tweets/<%=tweet.id%>/delete" method="post">
                      <input id="hidden" type="hidden" name="_method" value="DELETE">
                      <input type="submit" class="btn btn-default btn-sm" value="Delete">
                    </form>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% } %>
  </div>
</div>
